<div class="banner">
  <div class="brown">
    <div class="back">
      <h1>Countdown</h1>
    </div>
  </div>
</div>
<div class="container">
  <% @letters.each do |letter|%>
  <div class="letter"><h1><%= letter %></h1></div>
  <%end%>
</div>
<form action="/score" method="post">
  <label for="string">What is the longest word you can find?</label>
  <input type="text" id="string" name="word">
  <input type="submit" value="Play">
  <input id="letters" name="letters" type="hidden" value=<%=@letters.join%>>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>